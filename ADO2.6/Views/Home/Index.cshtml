@model List<ADO2._6.Models.Inimene>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Список людей</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #e2e2e2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        form {
            margin-top: 20px;
        }

        label {
            display: inline-block;
            width: 100px;
            margin-bottom: 10px;
        }

        input[type="text"], input[type="number"] {
            padding: 5px;
            width: calc(100% - 120px);
        }

        button {
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h2>Inimeste nimekiri</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Nimi</th>
            <th>Vanus</th>
        </tr>
        @foreach (var inimene in Model)
        {
            <tr>
                <td>@inimene.Id</td>
                <td>@inimene.Nimi</td>
                <td>@inimene.Vanus</td>
            </tr>
        }
    </table>

    <h2>Lisage uus inimene</h2>
    @using (Html.BeginForm("AddInimene", "Home", FormMethod.Post))
    {
        <p>
            <label for="nimi">Nimi:</label>
            <input type="text" id="nimi" name="nimi" required />
        </p>
        <p>
            <label for="vanus">Vanus:</label>
            <input type="number" id="vanus" name="vanus" required />
        </p>
        <button type="submit">Lisa</button>
    }
</body>
</html>
